@model IEnumerable<INDEShipping.Models.PostalCode>

<h2>Postal Codes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Nomos</th>
            <th>City</th>
            <th>Area</th>
            <th>Difficult Access</th>
            <th>No COD</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Nomos</td>
                <td>@item.City</td>
                <td>@item.Area</td>
                <td>@item.IsDifficultAccess</td>
                <td>@item.NoCOD</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New</a>

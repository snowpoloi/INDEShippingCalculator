@model IEnumerable<INDEShipping.Models.TransportCompany>

<h2>Transport Companies</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Max Length</th>
            <th>Max Width</th>
            <th>Max Height</th>
            <th>Max Weight</th>
            <th>Max Cubic</th>
            <th>Offer Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.MaxLength</td>
                <td>@item.MaxWidth</td>
                <td>@item.MaxHeight</td>
                <td>@item.MaxWeight</td>
                <td>@item.MaxCubic</td>
                <td>@item.OfferType</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New</a>

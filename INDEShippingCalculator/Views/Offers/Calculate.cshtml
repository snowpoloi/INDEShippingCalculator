@model INDEShipping.ViewModels.CalculateViewModel

@{
    ViewData["Title"] = "Calculate Shipping Cost";
}

<h2>Calculate Shipping Cost</h2>

<form asp-action="CalculateShippingCost">
    <div class="form-group">
        <label asp-for="TotalWeight" class="control-label"></label>
        <input asp-for="TotalWeight" class="form-control" />
        <span asp-validation-for="TotalWeight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDifficultAccess" class="control-label"></label>
        <input asp-for="IsDifficultAccess" class="form-control" />
        <span asp-validation-for="IsDifficultAccess" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Calculate" class="btn btn-primary" />
    </div>
</form>

@if (Model?.Results != null)
{
    <h3>Results</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Transport Company</th>
                <th>Total Cost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model.Results)
            {
                <tr>
                    <td>@result.TransportCompanyName</td>
                    <td>@result.TotalCost</td>
                </tr>
            }
        </tbody>
    </table>
}

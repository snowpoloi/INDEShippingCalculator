@model INDEShipping.ViewModels.XmlFieldMatchViewModel

<h2>Match XML Fields</h2>

<form asp-action="MatchFields" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>XML Field</th>
                <th>Database Field</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.XmlFields.Count; i++)
            {
                <tr>
                    <td>@Model.XmlFields[i]</td>
                    <td>
                        <select asp-for="FieldMappings[i].DatabaseField" class="form-control" asp-items="Model.DatabaseFields"></select>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit" value="Match Fields" class="btn btn-primary" />
    </div>
</form>

@model IFormFile

@{
    ViewData["Title"] = "Upload XML";
}

<h2>Upload XML</h2>

<form asp-action="UploadXml" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="xmlFile">Upload XML File</label>
        <input type="file" class="form-control" name="xmlFile" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
